<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.cinema.data.sales.ExpensesMapper">

    <insert id="insertExpenses" parameterType="com.example.cinema.po.Expenses"
            useGeneratedKeys="true" keyProperty="id">
        insert into Expenses(userId,Amount,Description)
        values (#{userId},#{Amount},#{Description})
    </insert>

    <select id="showExpensesByUserId" parameterType="java.lang.Integer" resultMap="Expenses">
        select * from Expenses where userId=#{userId}
    </select>

    <resultMap id="Expenses" type="com.example.cinema.po.Expenses">
        <result property="expenseId" column="expenseId"></result>
    </resultMap>

</mapper>